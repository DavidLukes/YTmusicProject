{
    "manifest_version": 3,
    "name": "YouTube Music Now Playing Scraper by Davidlukes",
    "version": "1.0.3",
    "description": "Scrapes now playing information from YouTube Music and sends it to a local server",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://music.youtube.com/*",
        "http://localhost:3000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://music.youtube.com/*"
            ],
            "js": [
                "content_script.js"
            ],
            "run_at": "document_idle"
        }
    ]
}